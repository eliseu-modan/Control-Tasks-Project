generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = "mysql://root:1357.modanesi@localhost:3306/systemtask"
}

model CreateMessages {
    id             Int         @id @default(autoincrement())
    name           String      @default("")
    email          String?
    subject        String
    userId         Int?
    dateInitial    DateTime?
    dateFinally    DateTime?
    dataConcluided DateTime?
    currentTask    Boolean     @default(false)
    permanent      Boolean     @default(false) // Definindo o valor padr√£o para permanent como false
    user           CreateUser? @relation(fields: [userId], references: [id])
}

model CreateUser {
    id       Int              @id @default(autoincrement())
    email    String           @unique
    password String
    admin    Boolean
    messages CreateMessages[]
}
